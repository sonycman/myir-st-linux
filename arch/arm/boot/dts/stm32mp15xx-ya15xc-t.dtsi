&i2c2 {
	pinctrl-names = "default", "sleep";
        pinctrl-0 = <&i2c2_pins_mx &i2c2_pins_z_mx>;
        pinctrl-1 = <&i2c2_sleep_pins_mx &i2c2_sleep_pins_z_mx>;
        i2c-scl-rising-time-ns = <100>;
        i2c-scl-falling-time-ns = <7>;
        status = "okay";
        /delete-property/dmas;
        /delete-property/dma-names;
	//clock-frequency = <100000>;
	
        touchscreen@38 {
              compatible ="edt,edt-ft5x06";
              reg = <0x38>;

              interrupts = <12 IRQ_TYPE_EDGE_FALLING>;
              interrupt-parent = <&gpioe>;
              interrupt-controller;
              touchscreen-size-x = <800>;
              touchscreen-size-y = <480>;

              reset-gpios = <&gpioe 11 GPIO_ACTIVE_LOW>;
              status = "disabled";
      };

	 
        tsc2007@48 {
                compatible = "ti,tsc2007";
                reg = <0x48>;
                interrupt-parent = <&gpioa>;
                interrupts = <15 IRQ_TYPE_EDGE_FALLING>;
                gpios = <&gpioa 15 0>;
                ti,x-plate-ohms = <180>;
                status = "disabled";
        };
        

	/*rtc1*/
	rtc1: rtc1@32 {
		compatible = "epson,rx8025";
		reg = <0x32>;
		status = "disabled";
	};


        stusb1600@28 {
		compatible = "st,stusb1600";
		reg = <0x28>;
		interrupts = <10 IRQ_TYPE_EDGE_FALLING>;
		interrupt-parent = <&gpioa>;
		pinctrl-names = "default";
		pinctrl-0 = <&stusb1600_pins_a>;
		status = "okay";
		vdd-supply = <&vin>;

		connector {
			compatible = "usb-c-connector";
			label = "USB-C";
			power-role = "dual";
			power-opmode = "default";

			port {
				con_usbotg_hs_ep: endpoint {
					remote-endpoint = <&usbotg_hs_ep>;
				};
			};
		};
	};


	camera@30 {
                compatible = "ovti,ov2659";
                reg = <0x30>;
                clocks = <&clk_ext_camera>;
                clock-names = "xvclk";
                reset-gpios = <&pcf8575 0 (GPIO_ACTIVE_LOW | GPIO_PUSH_PULL)>;
                status = "disabled";
                
                port {
                        camera0: endpoint {
                                remote-endpoint = <&dcmi_0>;
                                link-frequencies = /bits/ 64 <70000000>;
                        };
                };
        };


	pcf8575: gpio@20 {
                compatible = "nxp,pcf8575";
                reg = <0x20>;
                gpio-controller;
                #gpio-cells = <2>;
                lines-initial-states = <0xffff>;
                status = "okay";
        };

};

