#include "stm32mp157-m4-srm.dtsi"
#include "stm32mp157-m4-srm-pinctrl.dtsi"
#include <dt-bindings/mfd/st,stpmic1.h>
#include <dt-bindings/input/input.h>


/ {

	reserved-memory {
		#address-cells = <1>;
		#size-cells = <1>;
		ranges;

		mcuram2: mcuram2@10000000 {
			compatible = "shared-dma-pool";
			reg = <0x10000000 0x40000>;
			no-map;
		};

		vdev0vring0: vdev0vring0@10040000 {
			compatible = "shared-dma-pool";
			reg = <0x10040000 0x1000>;
			no-map;
		};

		vdev0vring1: vdev0vring1@10041000 {
			compatible = "shared-dma-pool";
			reg = <0x10041000 0x1000>;
			no-map;
		};

		vdev0buffer: vdev0buffer@10042000 {
			compatible = "shared-dma-pool";
			reg = <0x10042000 0x4000>;
			no-map;
		};

		mcuram: mcuram@30000000 {
			compatible = "shared-dma-pool";
			reg = <0x30000000 0x40000>;
			no-map;
		};

		retram: retram@38000000 {
			compatible = "shared-dma-pool";
			reg = <0x38000000 0x10000>;
			no-map;
		};
	};

	/*camera clock*/
	
	 clocks {
                clk_ext_camera: clk-ext-camera {
                        #clock-cells = <0>;
                        compatible = "fixed-clock";
                        clock-frequency = <12000000>;
                };
        };

	
	/*button S2*/
	joystick {
	        compatible = "gpio-keys";
        	#size-cells = <0>;
        	button-0 {
               		 label = "usr_button";
               		 linux,code = <KEY_ENTER>;
                	interrupt-parent = <&gpioz>;
                	interrupts = <0 IRQ_TYPE_EDGE_RISING>;
        	};
	};

	/*Run LED*/
	led {
        	compatible = "gpio-leds";
        	blue {
                        label = "heartbeat";
                        gpios = <&gpioa 13 GPIO_ACTIVE_HIGH>;
                        linux,default-trigger = "heartbeat";
                        default-state = "off";
                };

                blue_ex {
                        label = "heartbeat-ex";
                        gpios = <&pcf8575 4 GPIO_ACTIVE_LOW>;
                        linux,default-trigger = "heartbeat";
                        default-state = "off";
                };


	};
	
	/*ether phy pwr */
	myir_driver {
                compatible = "myir,ar8035";
                reset-gpios = <&gpiog 3 GPIO_ACTIVE_HIGH>;
		status = "okay";
        };
	
	wifi_pwrseq: wifi-pwrseq {
                compatible = "mmc-pwrseq-simple";
                reset-gpios = <&pcf8575 2 GPIO_ACTIVE_LOW>;
        };
	
	bt_pwrseq {
                compatible = "myir,bt_pwr";
                bt-gpios = <&pcf8575 3 GPIO_ACTIVE_HIGH>;
		status = "disabled";
        };	
	cam_pwrseq {
		compatible = "myir,cam_pwr";
		cam-gpios = <&pcf8575 1 GPIO_ACTIVE_HIGH>;
		status = "disabled";
	};
	
	/*pwm for backlight*/
	/*
	panel_backlight: panel-backlight {
		compatible = "pwm-backlight";
		pwms = <&pwm2 0 5000000>;
		brightness-levels = <0 4 8 16 32 64 128 255>;
		default-brightness-level = <7>;
		status = "okay";
	};
	*/
	

	usb_phy_tuning: usb-phy-tuning {
		st,hs-dc-level = <2>;
		st,fs-rftime-tuning;
		st,hs-rftime-reduction;
		st,hs-current-trim = <15>;
		st,hs-impedance-trim = <1>;
		st,squelch-level = <3>;
		st,hs-rx-offset = <2>;
		st,no-lsfs-sc;
	};

	vin: vin {
                compatible = "regulator-fixed";
                regulator-name = "vin";
                regulator-min-microvolt = <5000000>;
                regulator-max-microvolt = <5000000>;
                regulator-always-on;
        };
	 vdd_b3v3: fixedregulator@2 {
                compatible = "regulator-fixed";
                regulator-name = "vdd_b3v3";
                regulator-min-microvolt = <3300000>;
                regulator-max-microvolt = <3300000>;
                startup-delay-us = <70000>;
                 enable-active-high;
        };


};

/* adc 
 *myir pin header
 *ANA0 (ADC1_INP0 or ADC2_INP0)
 *ANA1 (ADC1_INP1 or ADC2_INP1)
 *PC0(ADC1_INP10 or ADC2_INP10) 
 *PC3(ADC1_INP13 or ADC2_INN12) 
 *PF12(ADC1_INP6 or ADC1_INN2)
 */

&adc{
	pinctrl-names = "default", "sleep";
	pinctrl-0 = <&adc_pins_mx>;
	pinctrl-1 = <&adc_sleep_pins_mx>;
	vdd-supply = <&vdd>;
        vdda-supply = <&vdda>;
        vref-supply = <&vrefbuf>;
	status = "okay";

	adc1: adc@0 {
                st,min-sample-time-nsecs = <10000>;
                st,adc-channels = <0 1 6 10 13>;
                status = "okay";
        };

        adc2: adc@100 {
		st,min-sample-time-nsecs = <5000>;
                st,adc-channels = <0 1 10 12>;
                status = "okay";
        };
	

        adc_temp: temp {
                status = "okay";
        };
};

/*dac*/
&dac{
	pinctrl-names = "default", "sleep";
	pinctrl-0 = <&dac1_pins_mx>;
	pinctrl-1 = <&dac1_sleep_pins_mx>;
	status = "okay";
	vref-supply = <&vdda>;

	//PA4
        dac1: dac@1 {
                status = "disabled";
        };
	//PA5
        dac2: dac@2 {
                status = "okay";
        };
};

